@{
    ViewBag.Title = "Registro";
}

<link rel="stylesheet" href="~/Template/css/login.css" />

<!-- Franja verde (breadcrumbs) igual a Login -->
<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 offset-lg-2 col-md-12 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Registro</h1>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li>Registro</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Cuadro blanco centrado igual a Login -->
<div class="login-container">
    <div class="login-card">
        <h2 class="login-title">Crear cuenta</h2>

        <div class="social-buttons">
            <div class="row">
                <div class="col-md-6 col-12">
                    <a href="javascript:void(0)" class="btn-social facebook">
                        <i class="lni lni-facebook-original"></i>
                        Login With Facebook
                    </a>
                </div>

                <div class="col-md-6 col-12">
                    <a href="javascript:void(0)" class="btn-social google">
                        <i class="lni lni-google"></i>
                        Login With Google 
                    </a>
                </div>

                <div class="col-md-6 col-12">
                    <a href="javascript:void(0)" class="btn-social instagram">
                        <i class="lni lni-instagram"></i>
                        Login With Instagram
                    </a>
                </div>

                <div class="col-md-6 col-12">
                    <a href="javascript:void(0)" class="btn-social linkedin">
                        <i class="lni lni-linkedin-original"></i>
                        Login With Linkedin
                    </a>
                </div>
            </div>
        </div>

        <div class="divider"> Registrate aqui</div>


        <form action="#!" method="post">

            <!-- Inputs (solo placeholders, como el diseño del template) -->
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Nombre" required>
            </div>

            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Correo" required>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" name="confirmPassword" placeholder="Confirme Contraseña" required>
            </div>

            <button type="submit" class="btn btn-login">Registrarse</button>

            <p class="register-link">
                ¿Ya tiene cuenta? <a href="@Url.Action("Login", "Home")">Inicie sesión</a>
            </p>

        </form>
    </div>
</div>
